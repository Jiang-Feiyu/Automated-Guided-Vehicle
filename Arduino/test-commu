void setup() {
  Serial.begin(9600); // 设置串口波特率为9600
}

void loop() {
  // 等待从串口接收数据
  if (Serial.available() > 0) {
    // 读取接收到的数字
    int receivedValue = Serial.parseInt();

    // 处理接收到的数字
    switch (receivedValue) {
      case 1:
        // 执行与数字1相关的操作
        break;
      case 2:
        // 执行与数字2相关的操作
        break;
      case 3:
        // 执行与数字3相关的操作
        break;
      case 4:
        // 执行与数字4相关的操作
        break;
      default:
        // 处理其他情况
        break;
    }
  }
}
