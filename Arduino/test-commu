void setup() {
  Serial.begin(9600);  // 初始化串口通信，波特率设置为9600
}

void loop() {
  waitForPythonMessage();
}

void waitForPythonMessage() {
  while (true) {
    if (Serial.available() > 0) {
      // 如果串口有可用数据
      String input = Serial.readStringUntil('\n');  // 读取一行数据，以换行符为结束标志
      Serial.println("received");  // 无论接收到什么内容，都返回 "received"
      break;  // 退出循环，等待下一次消息
    }
  }
}
