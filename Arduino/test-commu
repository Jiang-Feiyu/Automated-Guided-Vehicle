void setup() {
  Serial.begin(9600);  // Initialize serial communication with a baud rate of 9600
}

void loop() {
  waitForPythonMessage();
}

void waitForPythonMessage() {
  String str = "";
  while (Serial.available()) {
    char ch = Serial.read();
    str += ch;
    delay(10);
  }
  if (str.length() > 0) {
    Serial.println("Received message from Python: " + str);

    // Process the received message here if needed

    // Send a response back to Python
    sendResponseToPython("Message received!");
  }
}

void sendResponseToPython(String response) {
  Serial.println(response);
  delay(10);
}
