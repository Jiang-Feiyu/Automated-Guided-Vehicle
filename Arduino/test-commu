void setup() {
  Serial.begin(9600);  // 初始化串口通信，波特率设置为9600
}

void loop() {
  waitForPythonMessage();
}

void waitForPythonMessage() {
  String str="";
  while (Serial.available()) {
      char ch=Serial.read();
      str+=ch;
      delay(10);
  }
  if (str.length()>0){
    Serial.println(str);
  }
}
